{
  "name": "Laconic Hover",
  "version": "0.0.2",
  "description": "Displays laconic text when hovering over a tvtropes link",
  "content_scripts": [
    {
      "css": [
        "bundle.css"
      ],
      "matches": [
        "*://tvtropes.org/*"
      ],
      "js": [
        "bundle.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "*://tvtropes.org/*"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "manifest_version": 2
}
