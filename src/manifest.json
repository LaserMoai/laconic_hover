{
  "name": "Laconic Hover",
  "version": "0.0.0",
  "description": "Shows laconic text when hovering on tvtropes links... That's it.",
  "homepage_url": "https://github.com/spookyUnknownUser/Laconic_Hover",
  "manifest_version": 2,
  "author": "Spooky User",
  "minimum_chrome_version": "55",
  "applications": {
    "gecko": {
      "id": "{c7a8881a-5be2-4f11-871b-9d5ea43c692c}",
      "strict_min_version": "55.0"
    }
  },
  "content_scripts": [
    {
      "run_at": "document_idle",
      "matches": ["*://tvtropes.org/*"],
      "js": ["laconic-hover.js"]
    }
  ],
  "permissions": ["*://tvtropes.org/*"],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
