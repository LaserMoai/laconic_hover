{
  "name": "Laconic Hover",
  "version": "0.0.12",
  "homepage_url": "https://github.com/spookyUnknownUser/Laconic_Hover",
  "author": "Spooky User",
  "description": "Shows laconic text when hovering on tvtropes links... That's it.",
  "content_scripts": [
    {
      "run_at": "document_idle",
      "matches": ["*://tvtropes.org/*"],
      "js": ["laconic-hover.js"]
    }
  ],
  "permissions": ["tabs", "*://tvtropes.org/*"],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "manifest_version": 2
}
