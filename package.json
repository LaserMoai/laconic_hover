{
  "private": true,
  "scripts": {
    "lint:js": "xo",
    "lint-fix": "xo --fix",
    "dev": "parcel watch source/manifest.json --host localhost --config @parcel/config-webextension",
    "build": "parcel build source/manifest.json --config @parcel/config-webextension",
    "version": "dot-json distribution/manifest.json version $VER"
  },
  "dependencies": {
    "common-tags": "^1.8.2",
    "tippy.js": "^6.3.7"
  },
  "devDependencies": {
    "@types/common-tags": "^1.8.1",
    "@parcel/config-webextension": "^2.8.3",
    "parcel": "^2.8.3",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.3",
    "css-minimizer-webpack-plugin": "^4.2.2",
    "dot-json": "^1.2.2",
    "mini-css-extract-plugin": "^2.7.2",
    "npm-run-all": "^4.1.5",
    "remove-files-webpack-plugin": "^1.5.0",
    "size-plugin": "^3.0.0",
    "style-loader": "^3.3.1",
    "terser-webpack-plugin": "^5.3.6",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "web-ext": "^7.5.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "xo": "^0.53.1"
  },
  "xo": {
    "prettier": true,
    "envs": [
      "browser"
    ],
    "ignores": [
      "distribution"
    ],
    "globals": [
      "browser"
    ],
    "rules": {
      "import/no-unassigned-import": 0
    }
  },
  "prettier": {
    "singleQuote": false,
    "endOfLine": "auto",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "useTabs": false
  }
}
