{
  "private": true,
  "scripts": {
    "lint:js": "xo",
    "lint-fix": "xo --fix",
    "test": "run-s lint:js build",
    "build": "webpack --mode=production",
    "start:firefox": "cd distribution && ..\\node_modules\\.bin\\web-ext run --browser-console --start-url https://www.goodreads.com/book/show/10569.On_Writing",
    "watch": "webpack --mode=development --watch",
    "version": "dot-json distribution/manifest.json version $VER"
  },
  "dependencies": {
    "common-tags": "^1.8.0",
    "tippy.js": "^5.2.1"
  },
  "devDependencies": {
    "size-plugin": "^2.0.1",
    "remove-files-webpack-plugin": "^1.4.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "mini-css-extract-plugin": "^0.9.0",
    "terser-webpack-plugin": "^2.3.5",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "dot-json": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "style-loader": "^1.1.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "xo": "^0.28.1"
  },
  "xo": {
    "prettier": true,
    "envs": [
      "browser"
    ],
    "ignores": [
      "distribution"
    ],
    "globals": [
      "browser"
    ],
    "rules": {
      "import/no-unassigned-import": 0
    }
  },
  "prettier": {
    "singleQuote": false,
    "bracketSpacing": true,
    "useTabs": false
  }
}
