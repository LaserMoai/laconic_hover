{
  "private": true,
  "scripts": {
    "build:dev": "webpack --mode=development --watch",
    "build": "webpack --mode=production",
    "start:firefox": "web-ext run --source-dir ./distribution/",
    "update-version": "VERSION=$(find-versions $(git-latest-semver-tag)); echo $VERSION; dot-json distribution/manifest.json version $VERSION",
    "save-url": "echo https://github.com/$TRAVIS_REPO_SLUG/tree/$TRAVIS_COMMIT > distribution/SOURCE_URL",
    "lint": "xo",
    "lint:fix": "xo --fix",
    "test": "run-s lint build",
    "release:chrome": "shipit chrome ./distribution/",
    "release:firefox": "shipit firefox ./distribution/",
    "release": "run-s build update-version save-url release:*"
  },
  "dependencies": {
    "innerself": "^0.1.1",
    "tippy.js": "^3.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.1.5",
    "@babel/preset-env": "^7.1.5",
    "@wext/shipit": "git+https://github.com/spookyUnknownUser/wext-shipit.git",
    "babel-loader": "^8.0.4",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^1.0.1",
    "dot-json": "^1.0.4",
    "find-versions-cli": "^3.0.0",
    "git-latest-semver-tag": "^1.0.2",
    "npm-run-all": "^4.1.3",
    "style-loader": "^0.23.1",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "xo": "^0.23.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "chrome": "55",
            "firefox": "55"
          }
        }
      ]
    ]
  },
  "xo": {
    "env": [
      "browser"
    ],
    "space": true,
    "prettier": true,
    "rules": {
      "import/no-unassigned-import": 0
    }
  },
  "prettier": {
    "singleQuote": false,
    "bracketSpacing": true
  }
}
