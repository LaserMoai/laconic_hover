{
  "private": true,
  "scripts": {
    "build:dev": "webpack --mode=development --watch",
    "build": "webpack --mode=production",
    "start:firefox": "web-ext run --source-dir ./distribution/ --browser-console --start-url https://tvtropes.org/",
    "update-version": "VERSION=$(find-versions $(git-latest-semver-tag)); echo $VERSION; dot-json distribution/manifest.json version $VERSION",
    "save-url": "echo https://github.com/$TRAVIS_REPO_SLUG/tree/$TRAVIS_COMMIT > distribution/SOURCE_URL",
    "lint": "xo",
    "lint:fix": "xo --fix",
    "test": "run-s lint build",
    "release:chrome": "shipit chrome ./distribution/",
    "release:firefox": "shipit firefox ./distribution/",
    "release": "run-s build update-version save-url release:*"
  },
  "dependencies": {
    "common-tags": "^1.8.0",
    "tippy.js": "^5.2.1"
  },
  "devDependencies": {
    "size-plugin": "^2.0.1",
    "remove-files-webpack-plugin": "^1.4.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "mini-css-extract-plugin": "^0.9.0",
    "terser-webpack-plugin": "^2.3.5",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "dot-json": "^1.2.0",
    "find-versions-cli": "^3.0.0",
    "git-latest-semver-tag": "^1.0.2",
    "npm-run-all": "^4.1.5",
    "style-loader": "^1.1.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "xo": "^0.28.1"
  },
  "xo": {
    "env": [
      "browser"
    ],
    "space": true,
    "prettier": true,
    "rules": {
      "import/no-unassigned-import": 0
    }
  },
  "prettier": {
    "singleQuote": false,
    "bracketSpacing": true
  }
}
