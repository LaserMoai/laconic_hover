{
  "private": true,
  "version": "1.5.0",
  "scripts": {
    "dev": "parcel watch source/manifest.json --host localhost --config @parcel/config-webextension",
    "build": "parcel build source/manifest.json --config @parcel/config-webextension --no-source-maps",
    "save:version": "dot-json dist/manifest.json version $npm_package_version",
    "package": "pnpm run build && npm run save:version && zip -r dist/extension.zip dist/* -x dist/extension.zip"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.6.0",
    "common-tags": "^1.8.2",
    "tippy.js": "^6.3.7"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.9.0",
    "@parcel/core": "^2.9.0",
    "parcel": "^2.9.0",
    "@types/common-tags": "^1.8.1",
    "dot-json": "^1.3.0",
    "typescript": "^4.9.5"
  },
  "prettier": {
    "singleQuote": false,
    "endOfLine": "auto",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "useTabs": false
  }
}