{
  "private": true,
  "scripts": {
    "lint:js": "xo",
    "lint-fix": "xo --fix",
    "dev": "parcel watch source/manifest.json --host localhost --config @parcel/config-webextension",
    "build": "parcel build source/manifest.json --config @parcel/config-webextension",
    "version": "dot-json distribution/manifest.json version $VER"
  },
  "dependencies": {
    "common-tags": "^1.8.2",
    "tippy.js": "^6.3.7"
  },
  "devDependencies": {
    "@types/common-tags": "^1.8.1",
    "@parcel/config-webextension": "^2.8.3",
    "parcel": "^2.8.3",
    "dot-json": "^1.2.2",
    "typescript": "^4.9.4",
    "xo": "^0.53.1"
  },
  "xo": {
    "prettier": true,
    "envs": [
      "browser"
    ],
    "ignores": [
      "distribution"
    ],
    "globals": [
      "browser"
    ],
    "rules": {
      "import/no-unassigned-import": 0
    }
  },
  "prettier": {
    "singleQuote": false,
    "endOfLine": "auto",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "useTabs": false
  }
}