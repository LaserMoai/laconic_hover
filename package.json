{
  "name": "LaconicHover",
  "version": "0.0.2",
  "description": "Displays laconic text when hovering over a tvtropes link",
  "dependencies": {
    "jquery": "2.2.2",
    "qtip2": "^3.0.3"
  },
  "devDependencies": {
    "browserify": "^13.3.0",
    "copy": "^0.3.0",
    "crx": "^3.2.1",
    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "glob": "latest",
    "jshint": "latest",
    "jszip": "^3.1.3",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "uglify-js": "^2.7.5",
    "webpack": "^1.14.0",
    "zip-folder": "^1.0.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "jshint ./src/js/",
    "start": "node src/js/hello.js",
    "build": "npm run clean && webpack --optimize-minimize && npm run icons",
    "build:chrome": "npm run build && npm run manifest:chrome && npm run crx",
    "min": "uglifyjs ./dist/bundle.js > ./dist/bundle.min.js ",
