{
  "name": "LaconicHover",
  "version": "0.0.4",
  "description": "Displays laconic text when hovering over a tvtropes link",
  "dependencies": {
    "jquery": "2.2.2",
    "qtip2": "^3.0.3"
  },
  "devDependencies": {
    "chrome-extension-deploy": "^2.0.3",
    "cpy-cli": "^1.0.1",
    "crx": "^3.2.1",
    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "jshint": "latest",
    "ncp": "^2.0.0",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "uglify-js": "^2.7.5",
    "webpack": "^1.14.0"
  },
  "scripts": {
    "test": "npm run lint",
    "lint": "jshint ./src/js/",
    "start": "node src/js/hello.js",
    "build": "npm run clean && webpack --optimize-minimize && npm run icons",
    "build:chrome": "npm run build && npm run manifest:chrome && npm run crx",
    "min": "uglifyjs ./build/bundle.js > ./build/bundle.min.js ",
    "icons": "ncp src/images/icons build/icons",
    "manifest:chrome": "cpy chrome/manifest.json build",
    "clean": "rimraf build && rimraf ./chrome/dist/*",
    "crx": "crx pack build -o chrome/dist/chrome.crx --zip-output chrome/dist/chrome.zip -p key.pem",
    "deploy:chrome": "node ./tools/chrome-deploy.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
