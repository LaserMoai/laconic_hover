{
  "name": "Laconic Hover for TV Tropes",
  "version": "0.0.0",
  "description": "Shows Laconic text when hovering on a TV Tropes link.",
  "homepage_url": "https://github.com/spookyuser/Laconic_Hover",
  "manifest_version": 3,
  "author": "Spooky User",
  "minimum_chrome_version": "68",
  "applications": {
    "gecko": {
      "id": "{c7a8881a-5be2-4f11-871b-9d5ea43c692c}",
      "strict_min_version": "61.0"
    }
  },
  "content_scripts": [
    {
      "run_at": "document_idle",
      "matches": ["*://tvtropes.org/*"],
      "js": [
        "content-script.ts"
      ],
      "css": ["content-script.css"]
    }
  ],
  "host_permissions": [
    "*://tvtropes.org/*"
  ],
  "permissions": [
    "storage"
  ],
  "icons": {
    "128": "assets/icon.png"
  }
}
